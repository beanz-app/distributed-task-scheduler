  "dependencies": {
    "continuation-local-storage": "^3.2.1",
    "fastest-validator": "^1.15.0",
    "ioredis": "^4.0.0",
    "ioredis-lock": "^4.0.0",
    "ioredis-streams": "^0.0.9",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.12.0",
    "koa-body": "^5.0.0",
    "koa-tree-router": "^0.6.0",
    "log4js": "^6.6.1",
    "uuid": "^8.3.2"

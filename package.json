    "lint": "./node_modules/.bin/eslint src/*/*.ts --format codeframe",
    "fix-lint": "./node_modules/.bin/eslint src/*/*.ts --fix",
    "type-check": "./node_modules/.bin/tsc --noEmit",
    "watch": "./node_modules/.bin/tsc -w -p ./src"
  },
